<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="width"
            type="int" />

        <variable
            name="recordType"
            type="me.bakumon.moneykeeper.database.entity.RecordType" />
    </data>

    <LinearLayout
        android:id="@+id/ll_type_item_root"
        android:layout_width="@{width, default = wrap_content}"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:visibility="@{recordType != null}"
        tools:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="62dp"
            android:layout_height="56dp"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:src="@{recordType.imgResId}"
                tools:src="@mipmap/type_eat" />

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_check"
                android:visibility="@{recordType.isChecked}" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{recordType.name}"
            android:textColor="@color/colorTextWhite"
            tools:text="餐饮" />
    </LinearLayout>
</layout>